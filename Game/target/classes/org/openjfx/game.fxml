<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<GridPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.GameController" minWidth="500" minHeight="500">
    <columnConstraints>
        <ColumnConstraints minWidth="250" prefWidth="250" maxWidth="Infinity" halignment="CENTER"></ColumnConstraints>
        <ColumnConstraints minWidth="250" prefWidth="250" maxWidth="Infinity" halignment="CENTER"></ColumnConstraints>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="250" prefHeight="250"></RowConstraints>
        <RowConstraints minHeight="250" prefHeight="250"></RowConstraints>
    </rowConstraints>
    <VBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="0" >
        <padding>
            <Insets bottom="50.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label text="Spammer la touche ESPACE" />
        <Label text="0" fx:id="currentSpam"></Label>
        <Label text="" fx:id="word"></Label>
        <TextField disable="true" fx:id="input" onKeyReleased="#removeSpace" onAction="#compareWord"></TextField>
        <Label fx:id="timeRemaining"></Label>

    </VBox>
    <VBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="1" >
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label text="Timer" />
        <VBox>
            <HBox spacing="15">
                <Label text="Score joueur :"></Label>
                <ProgressBar progress="0.0" fx:id="scorePlayer"></ProgressBar>
            </HBox>
            <HBox spacing="15">
                <Label text="Score IA :" ></Label>
                <ProgressBar progress="0.0" fx:id="scoreIA"></ProgressBar>
            </HBox>

        </VBox>
        <Button fx:id="goToLobby" text="Abandonner" onAction="#switchToLobby" focusTraversable="false" />
    </VBox>

</GridPane>

